<body>
    <div class="main-wrapper account-wrapper">
        <div class="account-page">
            <div class="account-center">
                <div class="account-box">
                    <form action="/doctor/login" method="POST" class="form-signin">
                        <div class="account-logo">
                            <a href="/"><img src="/assets/img/logo-dark.png" alt=""></a>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <%if(locals.error){ %>
                                <% if(error==='email is not allowed to be empty' ){%>
                                    <div style="color: rgb(126, 6, 30); margin: 10px 2px; font-size: 0.8em; font-weight: bold;">
                                        <%= error %>
                                    </div>
                                <% } %>
                            <% } %>

                            <%if(locals.error){ %>
                                
                                <div style="color: rgb(126, 6, 30); margin: 10px 2px; font-size: 0.8em; font-weight: bold;">
                                    invalid email or Password
                                </div>
                              
                            <% } %>
                            <input type="text" autofocus="" class="form-control" name="email" value="<%= typeof email !== 'undefined' ? email: '' %>">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <%if(locals.error){ %>
                                <% if(error==='Password does not match with the one you set' ){%>
                                    <div style="color: rgb(126, 6, 30); margin: 10px 2px; font-size: 0.8em; font-weight: bold;">
                                        invalid password
                                    </div>
                                    <% } %>
                                        <% } %>
                            <input type="password" class="form-control" name="password" value="<%= typeof password !== 'undefined' ? password: '' %>">
                        </div>
                        <!-- <div class="form-group text-right">
                            <a href="forgot-password.html">Forgot your password?</a>
                        </div> -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary account-btn">Login</button>
                        </div>
                        <div class="text-center register-link">
                            Donâ€™t have an account? <a href="/register">Register Now</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/app.js"></script>
</body>


